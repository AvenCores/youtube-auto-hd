{
  "name": "youtube-auto-hd-plasmo",
  "displayName": "YouTube Auto HD + FPS",
  "version": "1.7.0",
  "description": "Automatically set the video quality on YouTube according to its FPS!",
  "author": "avi12 <avi6106@gmail.com>",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "dev:firefox": "plasmo dev --verbose --target=firefox-mv3",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target firefox-mv3",
    "package-test": "plasmo package",
    "package": "web-ext pack --source-dir build/chrome-mv3-dev --overwrite-dest --artifacts-dir dist_pack --filename youtube-auto-hd-fps-{version}.zip",
    "package:firefox": "web-ext build --source-dir build/firefox-mv3-dev --overwrite-dest --artifacts-dir dist_pack --filename youtube-auto-hd-fps-{version}_adapted_for_firefox.zip",
    "build-pack": "pnpm build && pnpm package-test",
    "build-pack:firefox": "pnpm build:firefox && pnpm package",
    "build-pack:all": "pnpm build-pack && pnpm build-pack:firefox",
    "run-browser": "web-ext run --no-config-discovery --start-url https://www.youtube.com/watch?v=aiSla-5xq3w --source-dir build/chrome-mv3-dev --verbose --target",
    "run-chromium": "pnpm run-browser chromium",
    "run-chromium:rtl": "pnpm run-browser chromium --args=\"--lang=he\"",
    "run-firefox": "web-ext run --no-config-discovery --start-url https://www.youtube.com/watch?v=aiSla-5xq3w --source-dir build/firefox-mv3-dev --verbose --target firefox-desktop",
    "run-edge-windows": "pnpm run-browser chromium --chromium-binary \"%ProgramFiles(x86)%\\Microsoft\\Edge\\Application\\msedge.exe\""
  },
  "dependencies": {
    "@mdi/js": "^7.1.96",
    "@plasmohq/storage": "^1.0.5",
    "nouislider": "^15.7.0",
    "plasmo": "0.65.1-lab.3",
    "sass": "^1.58.2",
    "svelte": "3.55.1",
    "svelte-preprocess": "5.0.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.213",
    "@types/node": "18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.34.0",
    "eslint-config-avi12": "github:avi12/eslint-config-avi12",
    "postcss": "^8.4.21",
    "prettier": "2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.5",
    "web-ext": "^7.5.0"
  },
  "manifest": {
    "description": "__MSG_cj_i18n_02146__",
    "default_locale": "en",
    "host_permissions": [
      "https://youtube.com/*",
      "https://*.youtube.com/*",
      "https://www.youtube-nocookie.com/*",
      "https://youtube.googleapis.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "$FIREFOX_EXT_ID"
      }
    },
    "options_ui": {
      "browser_style": true,
      "open_in_tab": false
    },
    "permissions": [
      "cookies"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "chrome://*/*"
        ]
      }
    ]
  }
}
